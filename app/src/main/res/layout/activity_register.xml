<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5F6"
    android:padding="16dp">

    <!-- Sportski motiv u pozadini -->
    <ImageView
        android:id="@+id/backgroundPattern"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.05"
        android:rotation="-15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.92">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- LOGO (umjesto ðŸƒâ€â™‚ï¸) -->
                    <ImageView
                        android:id="@+id/ivRegisterLogo"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="14dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/team_logo"
                        android:src="@drawable/logo2" />

                    <!-- Naslov -->
                    <TextView
                        android:id="@+id/tvRegisterTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="center"
                        android:text="Kreiraj RaÄun"
                        android:textColor="#1F2937"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <!-- Podnaslov -->
                    <TextView
                        android:id="@+id/tvRegisterSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:text="PridruÅ¾ite se naÅ¡em trening timu"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                    <!-- Progress bar -->
                    <ProgressBar
                        android:id="@+id/registerProgressBar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:indeterminateTint="#F2BED1"
                        android:visibility="gone" />

                    <!-- KorisniÄko ime -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="KorisniÄko ime"
                            android:textColor="#374151"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxStrokeColor="#F2BED1"
                            app:endIconMode="clear_text"
                            app:hintTextColor="#9CA3AF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/usernameTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="npr. marko123"
                                android:inputType="textPersonName"
                                android:padding="14dp"
                                android:textColor="#111827"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Email adresa"
                            android:textColor="#374151"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxStrokeColor="#F2BED1"
                            app:endIconMode="clear_text"
                            app:hintTextColor="#9CA3AF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="npr. ime.prezime@email.com"
                                android:inputType="textEmailAddress"
                                android:padding="14dp"
                                android:textColor="#111827"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!-- Lozinka -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lozinka"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#374151"
                            android:layout_marginBottom="6dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#F2BED1"
                            app:hintTextColor="#9CA3AF"
                            app:endIconMode="password_toggle"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwordTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Najmanje 6 znakova"
                                android:inputType="textPassword"
                                android:padding="14dp"
                                android:textColor="#111827"
                                android:textSize="14sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Potvrda lozinke -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Potvrdite lozinku"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#374151"
                            android:layout_marginBottom="6dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#F2BED1"
                            app:hintTextColor="#9CA3AF"
                            app:endIconMode="password_toggle"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwordCnfTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ponovite lozinku"
                                android:inputType="textPassword"
                                android:padding="14dp"
                                android:textColor="#111827"
                                android:textSize="14sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!-- Privacy Policy -->
                    <!-- Privacy Policy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="24dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <CheckBox
                                android:id="@+id/cbAcceptPolicy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SlaÅ¾em se s pravilima privatnosti"
                                android:textColor="#888888"
                                android:textSize="14sp"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>

                        <!-- Privacy Policy link ispod -->
                        <TextView
                            android:id="@+id/tvPrivacyPolicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy"
                            android:textColor="#F2BED1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"

                            android:layout_marginTop="4dp"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>


                    <!-- Dugme za registraciju -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/registerBtn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:letterSpacing="0.02"
                        android:text="REGISTRIRAJ SE"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:backgroundTint="#F2BED1"
                        app:cornerRadius="16dp"
                        app:rippleColor="#FDCEDF" />

                    <!-- Separator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#E5E7EB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:text="ILI"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#E5E7EB" />

                    </LinearLayout>

                    <!-- Povratak na login -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/backToLoginBtn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:letterSpacing="0.02"
                        android:text="VEÄ† IMAM RAÄŒUN"
                        android:textAllCaps="true"
                        android:textColor="#F2BED1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="16dp"
                        app:rippleColor="#F8E8EE"
                        app:strokeColor="#F2BED1"
                        app:strokeWidth="2dp" />

                    <!-- Emoji footer -->
                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’ª ðŸƒ âš½ ðŸ€ ðŸ"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_marginTop="24dp"
                        android:letterSpacing="4"/>  -->

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Footer -->
            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="48dp"
                android:text="Â© 2026 Sportska Grupa - Svi treninzi, jedan tim!"
                android:textSize="11sp"
                android:textColor="#9CA3AF"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/cardRegister"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
