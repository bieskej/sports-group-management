<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prijava"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvLoginSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unesite podatke za pristup aplikaciji"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="16dp"/>

            <ProgressBar
                android:id="@+id/loginProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/loginEmailTxt"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="npr. ime.prezime@email.com"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:background="@drawable/input_rounded"
                android:textColor="#111827"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lozinka"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/loginPasswordTxt"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="Unesite lozinku"
                android:inputType="textPassword"
                android:padding="14dp"
                android:background="@drawable/input_rounded"
                android:textColor="#111827"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Prijavite se"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_primary_rounded"
                android:backgroundTint="@null"/>

            <Button
                android:id="@+id/goToRegisterBtn"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Nemate raÄun? Registrirajte se"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_ghost_rounded"
                android:backgroundTint="@null"
                android:layout_marginTop="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
